<h1> Note: </h1>
<% if @note.errors.any? %>
    <% @note.errors.full_messages.each do |error| %>
        <%= error %>
    <% end %>
<% end %>

<%= form_with(model: @note, url: new_note_path) do |form|%>
    <div class="mb-3">
    <%= form.label :client_id, "Client First and Last name:" %>
    <%= form.collection_select :client_id, Client.all, :id, :name, prompt:"Select One", class: "form-control" %>
    </div>
    <div class="mb-3">
    <%= form.label :date, "Service Date:" %>
    <%= form.text_field :date, class: "form-control" %>
    </div>
    <div class="mb-3">
    <%= form.label :time, "Service length:" %>
    <%= form.time_field :time, class: "form-control" %>
    </div>

<% end %>