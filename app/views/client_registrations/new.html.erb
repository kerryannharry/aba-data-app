<div class="text-4xl">
<h1> Client Registration </h1>
</div>
<% if @client.errors.any? %>
    <% @client.errors.full_messages.each do |message| %>
        <%= message %>
    <% end %>
 <% end %>
<%= form_with(model: @client, url: client_registrations_path) do |form|%>
    <div class="text-lg font-serif">
    <%= form.label :main_image %>
    <%= form.file_field :main_image %>
    </div>
    <div class="text-lg font-serif">
    <%= form.label :name, "Client First and Last name:" %>
    <%= form.text_field :name, class: "form-control" %>
    </div>
    <div class="text-lg font-serif">
    <%= form.label :parent_name, "Primary Parent First and Last Name:" %>
    <%= form.text_field :parent_name, class: "form-control" %>
    </div>
    <div class="text-lg font-serif">
    <%= form.label :insurance, "This client is eligible for insurance coverage." %>
    <%= form.check_box :insurance, class: "form-control" %>
    </div>
    <div class="text-lg font-serif">
    <%= form.label :address, "Current Address:" %>
    <%= form.text_field :parent_address, class: "form-control" %>
    </div>
    <div class="text-lg font-serif">
    <%= form.label :phone_number, "Primary Parent Phone Number:" %>
    <%= form.telephone_field :parent_phone_number, class: "form-control" %>
    </div>
    <div class="text-lg font-serif">
    <%= form.label :email, "Primary Parent Email: " %>
    <%= form.email_field :parent_email, class: "form-control" %>
    </div>
    <div class="text-lg font-serif">
    <%= form.label :password, "Password:" %>
    <%= form.password_field :password, class: "form-control" %>
    </div>
    <div class="text-lg font-serif">
    <%= form.label :password_confirmation, "Confirm Password:" %>
    <%= form.password_field :password_confirmation, class: "form-control" %>
    </div>
    <div class="text-lg font-serif">
    <%= form.submit "Register", class: "btn btn-primary" %>
    </div>
<% end %>